<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_extra_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:padding="16dp"
            android:textAppearance="?textAppearanceTitleLarge"
            android:textColor="?colorPrimary"
            tools:text="title" />

        <ViewStub
            android:id="@+id/info_spotify_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/layout_spotify_track_features" />

        <include
            android:id="@+id/info_extra_header1"
            layout="@layout/header_with_action" />

        <include
            android:id="@+id/info_extra_frame1"
            layout="@layout/frame_charts_list" />

        <include
            android:id="@+id/info_extra_header2"
            layout="@layout/header_with_action" />

        <include
            android:id="@+id/info_extra_frame2"
            layout="@layout/frame_charts_list" />

        <include
            android:id="@+id/info_extra_header3"
            layout="@layout/header_with_action" />

        <include
            android:id="@+id/info_extra_frame3"
            layout="@layout/frame_charts_list" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>