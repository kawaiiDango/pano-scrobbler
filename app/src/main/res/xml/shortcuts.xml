<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="n_mr1">
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_settings"
        android:shortcutDisabledMessage="@string/settings"
        android:shortcutId="pref"
        android:shortcutLongLabel="@string/settings"
        android:shortcutShortLabel="@string/settings">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="pano-scrobbler://screen/Prefs"
            android:targetClass="com.arn.scrobble.main.MainActivity"
            android:targetPackage="com.arn.scrobble" />
    </shortcut>
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_mic"
        android:shortcutDisabledMessage="@string/from_mic"
        android:shortcutId="rec"
        android:shortcutLongLabel="@string/from_mic"
        android:shortcutShortLabel="@string/from_mic">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="pano-scrobbler://screen/MicScrobble"
            android:targetClass="com.arn.scrobble.main.MainActivity"
            android:targetPackage="com.arn.scrobble" />
    </shortcut>
    <shortcut
        android:enabled="true"
        android:icon="@mipmap/ic_shortcut_search"
        android:shortcutDisabledMessage="@string/search"
        android:shortcutId="search"
        android:shortcutLongLabel="@string/search"
        android:shortcutShortLabel="@string/search">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="pano-scrobbler://screen/Search"
            android:targetClass="com.arn.scrobble.main.MainActivity"
            android:targetPackage="com.arn.scrobble" />
    </shortcut>
</shortcuts>
